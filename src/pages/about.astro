    <h2 class="mb-2 text-2xl font-bold mt-5 dark:text-neutral-200">Skills</h2>
    <div class="flex flex-wrap items-center gap-2 mt-5">
            {stack.map(stack => (
              <StackCard 
                name={stack.name}
                src={stack.src}
              />
            ))}
          </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Education
    </h2>
    <div class="px-5 py-10">
      {
        education.map((education, loop) => {
          return (
            <>
              {loop == 0 || loop == 1 ? (
                <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                  <AboutEducation
                    date={education.date}
                    school={education.school}
                    major={education.major}
                    description={education.description}
                    logo={education.logo}
                  />
