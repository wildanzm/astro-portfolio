                  school={education.school}
                  major={education.major}
                  description={education.description}
                  logo={education.logo}
                />
              )}
            </>
          )
        })
      }
    </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experiences
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience, loop) => {
          return (
            <>
              {loop == 0 || loop == 1 ? (
                <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                  <AboutExperience
                    dates={experience.dates}
                    role={experience.role}
                    company={experience.company}
                    description={experience.description}
                    logo={experience.logo}
                    status={experience.status}
                  />
                </div>
              ) : (
                <AboutExperience
                  dates={experience.dates}
                  role={experience.role}
                  company={experience.company}
                  description={experience.description}
                  logo={experience.logo}
                  status={experience.status}
                />
              )}
            </>
          )
        })
      }
    </div>

    <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">Achievements</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {
        achievements.map(achievement => (
          <Achievement src={achievement.src}/>
        ))
      }
    </div>

  

